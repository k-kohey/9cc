{
  "name": "9cc",
  "image": "compilerbook",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools",
        "ms-vscode.remote-containers"
      ]
    }
  },
  "workspaceFolder": "/9cc",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind"
  ],
  "runArgs": [
    "--cap-add=SYS_PTRACE",
    "--security-opt=seccomp=unconfined",
    "--tty=true"
  ]
}